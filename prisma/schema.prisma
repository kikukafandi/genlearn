generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int    @id @default(autoincrement())
  name       String
  email      String @unique
  password   String
  createdAt  DateTime @default(now())

  dnaSkill      UserDnaSkill?
  dnaPsychology UserDnaPsychology?
  aiInterpretations AiInterpretation[]
  recommendations UserRecommendation[]
}

model UserDnaSkill {
  id          Int     @id @default(autoincrement())
  userId      Int     @unique
  rawSkills   String  @db.Text
  experiences String  @db.Text
  interest    String  @db.Text
  skillStrong String  @db.Text
  skillMedium String  @db.Text
  skillWeak   String  @db.Text

  User User @relation(fields: [userId], references: [id])
}

model UserDnaPsychology {
  id         Int  @id @default(autoincrement())
  userId     Int  @unique
  cognitive  String @db.Text
  learning   String @db.Text
  motivation String @db.Text
  trait      String @db.Text
  answers    String @db.Text

  User User @relation(fields: [userId], references: [id])
}

model Major {
  id          Int    @id @default(autoincrement())
  name        String
  university  String?
  category    String?
  description String @db.Text
  prospects   String? @db.Text
  skills      String? @db.Text
  traits      String @db.Text
  mk          String @db.Text
  metadata    String? @db.Text
}

model UserRecommendation {
  id              Int      @id @default(autoincrement())
  userId          Int
  recommendations String   @db.LongText
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model AiInterpretation {
  id          Int      @id @default(autoincrement())
  userId      Int
  type        String   // 'dna', 'major', etc.
  category    String?  // 'full', 'summary', etc.
  prompt      String   @db.Text
  response    String   @db.LongText
  metadata    String?  @db.Text // JSON untuk data tambahan
  createdAt   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
}
